<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_pager"
        android:layout_width="344dp"
        android:layout_height="344dp"
        android:layout_marginHorizontal="23dp"
        android:layout_marginBottom="105dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/txt_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:text="hello all"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/txt_decs"
        app:layout_constraintEnd_toEndOf="@id/txt_decs"
        app:layout_constraintStart_toStartOf="@id/txt_decs" />

    <TextView
        android:id="@+id/txt_decs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40.5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="173dp"
        android:paddingHorizontal="10dp"
        android:text="hello all"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>